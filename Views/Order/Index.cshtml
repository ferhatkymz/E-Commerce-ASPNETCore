@{
    Layout = "_AdminLayout";
}
@model List<Order>

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header">
                <h5 class="card-title">Siparişler</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="table-secondary">
                            <tr>
                                <th>Sipariş Id</th>
                                @* <th>User Id</th> *@
                                <th>Full Name</th>
                                <th>Toplam</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th style="width: 40px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var o in Model)
                            {
                                <tr>
                                    <td>@o.Id</td>
                                    @* <td>@o.User.FullName</td> *@
                                    <td>@o.FullName</td>
                                    <td>@o.TotalPrice ₺</td>
                                    <td>@o.OrderDate.Date</td>
                                    <td>
                                        <div class="badge text-bg-primary">Onay Bekliyor</div>
                                    </td>
                                    <td>
                                        <a asp-controller="Order" asp-action="Details" asp-route-id="@o.Id"
                                            class="btn btn-primary btn-sm">
                                            <i class="fa-solid fa-right-long"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>