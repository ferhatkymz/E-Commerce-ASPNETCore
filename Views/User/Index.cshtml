@using Microsoft.AspNetCore.Identity
@model IList<User>
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between">
                <h5 class="card-title">Kullanıcılar</h5>
                <a asp-action="Create" type="button" class="btn btn-primary btn-sm">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
            <div class="card-body">


                @if (Model.Count() > 0)
                {
                    <form asp-action="Index" method="get">
                        <div class="row">
                            <div class="col-sm-7 col-md-5">
                                <div class="input-group mb-1">
                                    <select class="form-select" asp-items=" ViewBag.roles" name="role">
                                        <option>Hepsi</option>
                                    </select>
                                    <button type="submit" class="input-group-text btn btn-warning">Filtrele</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-secondary">
                                <tr>
                                    <th>Id</th>
                                    <th>Ad Soyad</th>
                                    <th>Email</th>
                                    <th style="width: 120px"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.Id</td>

                                        <td>@user.FullName</td>
                                        <td>
                                            @user.Email
                                        </td>
                                        <td>
                                            <div class="d-grid gap-1">
                                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">
                                                    <i class="fa-solid fa-pen-to-square"></i>
                                                </a>


                                                <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id"
                                                    class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">Bu role Sahip Kullanıcı Bulunamadı</div>
                }
            </div>
        </div>
    </div>
</div>