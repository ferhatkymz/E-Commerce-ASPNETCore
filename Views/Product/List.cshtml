@model List<Product>
@section bar
{
    @await Component.InvokeAsync("Navbar");

}
@if (Model.Count > 0)
{
    <h3 class="h4 mb-1 mb-lg-3 text-center">Ürün Listesi</h3>
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-2">

        @foreach (Product p in Model)
        {
            <div class="col">
                @await Html.PartialAsync("Partials/Site//_ProductCard", p)
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-danger">Ürün Bulunamadı</div>
}