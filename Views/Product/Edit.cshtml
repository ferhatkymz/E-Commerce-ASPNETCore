@model ProductEditModel
@{
    Layout = "_AdminLayout";
}
<form asp-controller="Product" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between">
                    <h5 class="card-title">Ürün Güncelle</h5>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-sm btn-primary">
                        <i class="fa-solid fa-list"></i>
                    </a>
                </div>
                <div class="card-body">

                    <div class="row mb-3">
                        <input type="hidden" name="Id" value="@Model.Id">
                        <input type="hidden" name="ImgName" value="@Model.ImgName">
                        <div class="col-sm-2">
                            <label asp-for="Name" class="col-form-label"></label>
                        </div>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-2">
                            <label asp-for="Description" class="col-form-label"></label>
                        </div>
                        <div class="col-sm-10">
                            <textarea asp-for="Description" class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Discount" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Discount" class="form-control" />
                            <span asp-validation-for="Discount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="isActive" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="isActive" class="form-check-input" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="isHome" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="isHome" class="form-check-input" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                                <option value="" selected="">Seçiniz</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <img src="~/img/@Model.ImgName" class="img-thumbnail" />
                    <input asp-for="ImgFile" class="form-control mt-3" />
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}