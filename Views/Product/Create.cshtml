@model ProductCreateModel
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header d-flex justify-content-between">
                <h5 class="card-title">Ürün Ekle</h5>
                <a asp-controller="Product" asp-action="Index" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>
            <div class="card-body">
                <form asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <div class="col-sm-2">
                            <label asp-for="Name" class="col-form-label"></label>
                        </div>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-2">
                            <label asp-for="Description" class="col-form-label"></label>
                        </div>
                        <div class="col-sm-10">
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>

                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Discount" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Discount" class="form-control" />
                            <span asp-validation-for="Discount" class="text-danger"></span>

                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="ImgFile" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="ImgFile" class="form-control">
                            <span asp-validation-for="ImgFile" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="ImgFile2" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="ImgFile2" class="form-control">
                            <span asp-validation-for="ImgFile2" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-3">
                        <label asp-for="ImgFile3" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="ImgFile3" class="form-control">
                            <span asp-validation-for="ImgFile3" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="isActive" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="isActive" class="form-check-input" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="isHome" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="isHome" class="form-check-input" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                                <option value="" selected="">Seçiniz</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
@section scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}