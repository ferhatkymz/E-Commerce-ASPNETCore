@model SliderEditModel
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Slider Güncelle</h5>
                <a asp-controller="Slider" asp-action="Index" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="@Model.Id" value="@Model.Id">
                    <div class="row mb-3">
                        <label for="SliderResmi" class="col-sm-2 col-form-label">Mevcut Resim</label>
                        <div class="col-sm-10">
                            <img src="~/img/@Model.Img" alt="" class="img-fluid rounded" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Title" class="col-sm-2 col-form-label">Başlık</label>
                        <div class="col-sm-10">
                            <input asp-for="Title" class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Description" class="col-sm-2 col-form-label">Aciklama</label>
                        <div class="col-sm-10">
                            <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="EditFile" class="col-sm-2 col-form-label">Güncellenecek Resim</label>
                        <div class="col-sm-10">
                            <input asp-for="EditFile" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Index" class="col-sm-2 col-form-label">Index</label>
                        <div class="col-sm-10">
                            <input asp-for="Index" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="isActive" class="col-sm-2 col-form-label">Aktif</label>
                        <div class="col-sm-10">
                            <input asp-for="isActive" class="form-check-input" checked="" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">
                                Kaydet
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}