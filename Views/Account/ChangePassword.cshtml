@model AccountChangePassword

@section bar
{

    <div class="bg-primary">
        <div class="container">
            <div class="breadcrumb ">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item active">Porala Değiştir</li>
            </div>
        </div>
    </div>

}
<div class="row">
    <div class="col-sm-3">
        @await Html.PartialAsync("Partials/Site/_AccountBar")
    </div>
    <div class="col-sm-9">
        <div class="card shadow">
            <div class="card-header">
                <h5 class="card-title">Parola Değiştir</h5>
            </div>
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <form asp-action="ChangePassword" method="post">
                    <div class="row mb-3">
                        <label asp-for="OldPassword" class="form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="OldPassword" class="form-control">
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Password" class="form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Password" class="form-control">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="ConfirmPassword" class="form-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="ConfirmPassword" class="form-control">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>

</div>
</div>

@section script
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}