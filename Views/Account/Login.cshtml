@model AccountLoginModel
@section bar
{
    <section class="bg-primary">
        <div class="container">
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a href="#">Anasayfa</a>
                    </li>
                    <li class="breadcrumb-item active">
                        Giriş Yap
                    </li>
                </ol>
            </nav>
        </div>
    </section>
}
<section class="my-2">
    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-7">
            <div class="card card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <form asp-controller="Account" asp-action="Login" method="post" novalidate>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control">
                        <span asp-asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RememberMe" class="form-check-label"></label>
                        <input asp-for="RememberMe" class="form-check-input">
                        <span asp-validation-for="RememberMe" class="text-danger"></span>
                    </div>
                    <a asp-controller="Account" asp-action="ForgotPassword" class="btn btn-warning">Şifremi Unuttum</a>
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                </form>
            </div>
        </div>
    </div>
    </div>
    </div>
</section>