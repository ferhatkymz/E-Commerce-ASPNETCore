@model List<Role>
@{
    Layout = "_AdminLayout";
}
<div class="card shadow">
    <div class="card-header d-flex py-1 d-flex justify-content-between align-items-center">
        <h5 class="card-title">Roller</h5>
        <a asp-controller="Role" asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fa-solid fa-plus"></i>
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-secondary">



                    <tr>
                        <th>Id</th>
                        <th>Rol AdÄ±</th>
                        <th style="width: 90px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>
                                <a asp-controller="Role" asp-action="Edit" asp-route-id="@item.Id"
                                    class="btn btn-primary btn-sm">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-asp-controller="Role" asp-action="Delete" asp-route-id="@item.Id"
                                    class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></a>
                            </td>


                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>