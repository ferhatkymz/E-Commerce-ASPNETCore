@model Role
@{
    Layout = "_AdminLayout";
}

<div id="center-container">

    <div class="text-center">
        <p class="card-text ">@Model.Id Numaralı Id sahip @Model.Name Kategorisini Silmek istediğinize Emin misiniz?
        </p>
        <form asp-action="DeleteConfirm" method="post">
            <input type="hidden" name="id" value="@Model.Id">
            <div class="d-grid gap-2 d-md-block">
                @if (ViewBag.Users.Count > 0)
                {
                    @foreach (var item in ViewBag.Users)
                    {
                        <p>
                            @item
                        </p>
                    }
                }
                else
                {
                    <button asp-controller="Role" asp-action="DeleteConfirm" asp-route-id="@Model.Id" type="submit"
                        class="btn btn-success">Evet</button>
                }
                <a asp-controller="Role" asp-action="Index" class="btn btn-danger">Hayır</a>
            </div>
        </form>
    </div>
</div>
